{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 1
  },
  "configurePresets": [
    {
      "name": "dev-common",
      "hidden": true,
      "inherits": [
        "dev-mode",
        "vcpkg",
        "clang-tidy"
      ],
      "cacheVariables": {},
      "environment": {
        "VCPKG_ROOT": "path/to/vcpkg/FIXTHIS"
      }
    },
    {
      "name": "dev-linux",
      "binaryDir": "${sourceDir}/build/dev-linux",
      "inherits": [
        "dev-common",
        "ci-linux",
        "clang-18"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "VCPKG_TARGET_TRIPLET": null,
        "VCPKG_HOST_TRIPLET": null
      }
    },
    {
      "name": "dev-win64",
      "binaryDir": "${sourceDir}/build/dev-win64",
      "inherits": [
        "dev-common",
        "ci-win64"
      ],
      "environment": {
        "UseMultiToolTask": "true",
        "EnforceProcessCountAcrossBuilds": "true"
      }
    },
    {
      "name": "dev",
      "binaryDir": "${sourceDir}/build/dev",
      "inherits": "dev-linux"
    },
    {
      "name": "dev-gcc",
      "binaryDir": "${sourceDir}/build/dev-gcc",
      "inherits": [
        "gcc-13",
        "dev-linux"
      ]
    },
    {
      "name": "dev-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-linux-release",
        "VCPKG_HOST_TRIPLET": "x64-linux-release"
      },
      "binaryDir": "${sourceDir}/build/release",
      "inherits": "dev-linux"
    },
    {
      "name": "dev-coverage",
      "binaryDir": "${sourceDir}/build/coverage",
      "inherits": [
        "coverage-linux",
        "dev-linux",
        "vcpkg"
      ]
    },
    {
      "name": "dev-sanitize",
      "binaryDir": "${sourceDir}/build/sanitize",
      "inherits": [
        "sanitize-linux",
        "dev-linux",
        "vcpkg"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "configurePreset": "dev",
      "configuration": "Debug",
      "jobs": 48
    }
  ],
  "testPresets": [
    {
      "name": "dev",
      "configurePreset": "dev",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "jobs": 48,
        "noTestsAction": "error"
      }
    }
  ]
}
